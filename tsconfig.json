{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["esnext"],
    "target": "es2018",
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": "src",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "screeps-steamless-client"]
}
